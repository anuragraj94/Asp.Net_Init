@using System.Data
@model DataTable
@{
    ViewBag.Title = "Trace Cargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-header text-center">
        <h2>Trace Cargo</h2>
    </div>
    <div class="card-body">
        <div class="container h-100">
            @using (Html.BeginForm("TraceCargo", "Admin", FormMethod.Post))
            {
                <div class="row h-100 justify-content-center align-items-center">
                    <div class="col-10 col-md-8 col-lg-6">

                        <div class="input-group">
                            <input type="text" class="form-control" required placeholder="Trace Cargo">
                            <div class="input-group-append">
                                <button class="btn btn-secondary" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>


                        @*//}*@
                    </div>
                </div>
                <table class="table">
                    @*<caption>List of users</caption>*@
                    <thead>
                        <tr>
                            <th scope="col">Order Id </th>
                            <th scope="col">Shift From</th>
                            <th scope="col">Quantity Ordered</th>
                            <th scope="col">Shift To</th>
                            <th scope="col">Capacity</th>
                            <th scope="col">QuantityInWarehouse</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                        {
                            <tr>
                                <td>@row["OrderId "]</td>
                                <td>@row["ShiftFrom"]</td>
                                <td>@row["QuantityOrdered"]</td>
                                <td>@row["ShiftTo"]</td>
                                <td>@row["Capacity"]</td>
                                <td>@row["QuantityInWarehouse"]</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<br />

